@model BKBBoard.Models.AccountInfo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.userID, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            @Html.EditorFor(model => model.userID, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.userID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                            @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.userRole, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                            @Html.DropDownListFor(model => model.userRole, new SelectList(Model.roleList, "value", "text"), "Select List",
                                             new { @class = "form-control input-sm ", @required = "required", @id = "role" })
                            @*Html.EditorFor(model => model.userRole, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.ValidationMessageFor(model => model.userRole, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.isActive, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            @*Html.EditorFor(model => model.isActive, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.DropDownListFor(model => model.isActive, new SelectList(Model.statusList, "value", "text"), "Select List",
                             new { @class = "form-control input-sm ", @required = "required", @id = "isActive" })

                            @Html.ValidationMessageFor(model => model.isActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.userDept, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                            @*Html.EditorFor(model => model.userDept, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.DropDownListFor(model => model.userDept, new SelectList(Model.deptList, "value", "text"), "Select List",
                             new { @class = "form-control input-sm ", @required = "required", @id = "dept" })

                            @Html.ValidationMessageFor(model => model.userDept, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-lg-offset-5 col-lg-4 col-md-offset-5 col-md-4 col-sm-offset-5 col-sm-4 col-xs-offset-5 col-xs-4">
                    <input type="submit" value="Create" class="btn btn-primary input-sm " style="background-color: #07889B" />
                </div>
            </div>
        </div>
    }
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#role").val($("#role option:selected").val());
        $("#dept").val($("#dept option:selected").val());
        $("#isActive").val($("#dept option:selected").val());
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#role").select2();
        $("#dept").select2();
        $("#isActive").select2();
    });
</script>
